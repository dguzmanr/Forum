@model Forums.Models.Forum.ForumIndexModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Browse Forums
        </div>
        <div class="sectionDescription">
            <p>Welcome to<strong>Connect Us Community</strong>!</p>
            <p>
                Pleased read the Forum Guidelines before creating a new post.
                @if (!Context.User.Identity.IsAuthenticated) {
                    <span>
                        You must be a <a asp-controller="Account" asp-action="Register">registered member</a> to create a new Post
                    </span>
                }
            </p>
        </div>
    </div>

    <div class="row" id="forumIndexContext">
        <table class="table table-hover" id="forumIndexTable">
            <tbody>
                @foreach (var forum in Model.ForumList)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" style="background-image:url(@forum.ImageUrl);"></div>
                            <div class="forumData">
                                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                                    @forum.Name
                                </a>
                                <div class="forumSubtitle">
                                    @if (forum.HasRecentPost)
                                    {
                                        <div class="hasRecentPost">Hot</div>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="forumPostCount">
                                @forum.NumberOfPosts Post
                            </div>
                            <div class="forumMemberCount">
                                @forum.NumberOfUsers  Users
                            </div>
                        </td>
                        <td>
                            <div class="forumDescription">
                                @forum.Description
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

