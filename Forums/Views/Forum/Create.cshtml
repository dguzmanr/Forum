@model Forums.Models.Forum.AddForumModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Forum
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">

            <div class="authorBlock">
                Please Submmit a Forum
            </div>
            <form asp-action="AddForum" method="post" id="addPostForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Choose Forum Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Forum Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief description on the forum topic" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload Forum Image</label>
                    <br />
                    <label class="btn bnt-default btn-file">
                        Browse <input asp-for="ImageUpload" typeof="file" style="display:none" />
                    </label>
                </div>
                <button type="submit" id="newFormBnt" class="btn btn-submitPost">Create Post</button>
            </form>
        </div>
    </div>
</div>